
class Solution {
    int getPairsCount(int[] arr, int n, int k) {
        // code here
        
        HashMap<Integer,Integer> hmap=new HashMap<>();
        int count=0;
        for(int i=0;i<n;i++){
            
            int b=arr[i];
            int a=k-b;
            
            if(hmap.containsKey(a)){
                count=count+hmap.get(a);
            }
            hmap.put(arr[i],hmap.getOrDefault(arr[i],0)+1);
        }
        return count;
    }
}
